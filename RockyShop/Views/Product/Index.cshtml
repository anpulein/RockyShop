@model IEnumerable<Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="UpSert" class="btn btn-primary">
                <i class="fa-regular fa-plus"></i>
                Create new product
            </a>
        </div>
    </div>
    
    <br/><br/>
    
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Product name</th>
                <th>Price order</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.Price</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="UpSert" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="fa-sharp fa-light fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exists</p>
    }
</div>